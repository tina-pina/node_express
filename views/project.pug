extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9 
         
            h3= project_name

            p= project_description
          
      .cell.portfolio-meta.small-6.medium-2.large-3
      ul
        each technologies in project_technologies
          li=technologies

      a.button.expanded(href=project_netlify) Netlify
          
      a.button.expanded(href=project_github) GitHub Repo
          
      img.image(src=project_img) 
            
          