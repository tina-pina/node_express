extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9 
        h1= project_name
        p.lead.text-light= project_description
          
      .cell.portfolio-meta.small-6.medium-2.large-3
         h6 Technologies
         ul
          //- iterate over every project`s technologies passed from project.js
          each technologies in project_technologies
            li=technologies

         a.button.expanded(href=project_live target="_blank" ) Live Demo
         a.button.expanded(href=project_github target="_blank") GitHub Repo
         
    each image in project_img       
      img.image(src=image) 
      